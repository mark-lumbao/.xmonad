Config {

   -- appearance
     font =         "xft:Bitstream Vera Sans Mono:size=11:bold:antialias=true,Font Awesome 6 Free Solid:pixelSize=11"
   , bgColor =      "#282828"
   , fgColor =      "#ebdbb2"
   , position =     BottomW L 93
   , border =       TopB
   , borderColor =  "#282828"

   -- layout
   -- add %battery% in template for laptops
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = "  <fc=#d79921>%whoami%</fc> <fc=#fe8019>%StdinReader%</fc>  %multicpu%  %memory% }{ %RPLL%  %date%  %battery% "

   -- general behavior
   , lowerOnStart =     True    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)

   -- plugins
   --   Numbers can be automatically colored according to their value. xmobar
   --   decides color based on a three-tier/two-cutoff system, controlled by
   --   command options:
   --     --Low sets the low cutoff
   --     --High sets the high cutoff
   --
   --     --low sets the color below --Low cutoff
   --     --normal sets the color between --Low and --High cutoffs
   --     --High sets the color above --High cutoff
   --
   --   The --template option controls how the plugin is displayed. Text
   --   color can be set by enclosing in <fc></fc> tags. For more details
   --   see http://projects.haskell.org/xmobar/#system-monitor-plugins.
   , commands =

        -- weather monitor
        [ Run Weather "RPLL" [ "--template"
                             , "<fc=#83a598> <stationState><skyCondition> <tempC>°C</fc>"
                             ] 36000

        -- StdinReader
        , Run StdinReader

        -- cpu activity monitor
        , Run MultiCpu       [ "--template" , "<fc=#b16286> <total0>% <total1>% <total2>% <total3>% <total4>% <total5>% <total6>% <total7>% <total8>% <total9>% <total10>% <total11>%</fc>"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--high"     , "#fb4934"
                             ] 10

        -- cpu core temperature monitor
        , Run CoreTemp       [ "--template" , "Temp: <core0>°C|<core1>°C"
                             , "--Low"      , "70"        -- units: °C
                             , "--High"     , "80"        -- units: °C
                             , "--low"      , "#689d6a"
                             , "--normal"   , "#fe8019"
                             , "--high"     , "#fb4934"
                             ] 50

        -- memory usage monitor
        , Run Memory         [ "--template" ,"<fc=#458588> <usedratio>%</fc>"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--high"     , "#fb4934"
                             ] 10

        -- battery monitor
        , Run Battery        [ "--template" , "<acstatus>"
                             , "--Low"      , "30"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "#fb4934"
                             , "--normal"   , "#fbf1c7"
                             , "--high"     , "#689d6a"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, " <left>%"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#fbf1c7> <left>%</fc>"
                                       -- charged status
                                       , "-i"	, "<fc=#fbf1c7> <left>%</fc>"
                             ] 50

        -- Value reference:
        -- https://hackage.haskell.org/package/parsedate-2006.11.10/docs/System-Time-Parse.html
        , Run Date           "<fc=#d3869b> %m/%d/%Y %a  %I:%M %p</fc>" "date" 10

        -- keyboard layout indicator
        , Run Kbd            [ ("us(dvorak)" , "<fc=#00008B>DV</fc>")
                             , ("us"         , "<fc=#8B0000>US</fc>")
                             ]

        -- uname
        , Run Com "uname" ["-s", "-r"] "uname" 0
        ]
   }
